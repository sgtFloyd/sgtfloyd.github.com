for haml_file in `find haml -name '*.haml'`
do
  output="${haml_file:5}"
  `haml $haml_file ${output%aml}tml`
  echo built $haml_file -\> $output
done

for sass_file in `find sass -name '*.sass'`
do
  output="${sass_file:5}"
  `sass $sass_file ${output%sass}css`
  echo built $sass_file -\> $output
done
